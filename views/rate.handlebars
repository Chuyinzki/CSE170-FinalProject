                <option>4</option>
                <option>5</option>
                <option>6</option>
                <option>7</option>
                <option>8</option>
                <option>9</option>
            </select>
        </div>

        <div class="col-xs-4">
            <p>Enjoyability?</p>
            <select class="selectpicker" id="enjoyability">
                <option>0</option>
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                <option>6</option>
                <option>7</option>
                <option>8</option>
                <option>9</option>
            </select>
        </div>

        <div class="col-xs-4">
            <p>Usefulness?</p>
            <select class="selectpicker" id="usefulness">
                <option>0</option>
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                <option>6</option>
                <option>7</option>
                <option>8</option>
                <option>9</option>
            </select>
        </div>

        <p><b>Please tell us a little about how you felt about this class :D</b></p>
        <textarea class="form-control" rows="3"></textarea>

        <!-- Provides extra visual weight and identifies the primary action in a set of buttons -->
        <a class="btn btn-primary" href="/courses" role="button">Rate it!</a>
    </div>

