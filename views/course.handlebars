  <body>
  <!-- this is a comment in HTML -->
  <div class="container">
    <div class="jumbotron">
        <h1>{{courseID}}</h1>
        <p>{{courseName}}</p>
    </div>

    <p>{{courseDescription}}</p>

      <div class="col-xs-4">
        <p><center>Overall Difficulty</center></p>
        <h1><center>{{difficulty}}</center></h1>
      </div>

      <div class="col-xs-4">
          <p><center>Overall Enjoyability</center></p>
          <h1><center>{{enjoyability}}</center></h1>
      </div>

      <div class="col-xs-4">
      <p><center>Overall Usefulness</center></p>
      <h1><center>{{usefulness}}</center></h1>
      </div>

      <div class=" col-xs-offset-2">
        <p>Have you taken {{courseID}}? <a class="btn btn-default" href="/courses/{{courseID}}/rate" role="button">Rate it!</a>
      </div>

      <div>
          <a href = "http://www.cape.ucsd.edu/responses/Results.aspx?Name=&CourseNumber={{courseFirstName}}+{{courseSecondName}}" target = "_blank">View the Cape! &raquo;</a>
      </div>

      <h3>Reviews</h3>
      <div style="height:300px;border:1px solid #ccc;font:16px/26px Georgia, Garamond, Serif;overflow:auto;">
        {{#each ratings}}
        <hr>
        <ul>{{review}}</ul>
        <hr>
        {{/each}}
      </div>

    </div>
    <hr>
    
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
